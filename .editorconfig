root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.ps1]
end_of_line = crlf
charset = utf-8-bom

[*.bat]
end_of_line = crlf
charset = utf-8

[*.sh]
end_of_line = lf
charset = utf-8

[*.md]
end_of_line = lf
charset = utf-8